<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilamungaSEvaluacion2P.MainPage">

    <ScrollView>
        <StackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Bienvenidos a la aplicacion de Santiago Pilamunga"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" /> 
            <Image
                Source="mapache.jpg"
                HeightRequest="185"
                Aspect="AspectFit"/>

            <Button
                x:Name="ChistesBtn"
                Text="Chistes" 
                Clicked="ChistesBtn_Clicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="AboutBtn"
                Text="About" 
                Clicked="AboutBtn_Clicked"
                HorizontalOptions="Fill" />
        </StackLayout>
    </ScrollView>

</ContentPage>
