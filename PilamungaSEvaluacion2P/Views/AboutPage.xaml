<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilamungaSEvaluacion2P.Views.AboutPage"
             Title="AboutPage">
    <Grid
        Padding="20"
        >
        <BoxView 
                Grid.Row="0" 
                Grid.Column="0" 
                Color="Beige" />
        <BoxView 
                Grid.Row="0" 
                Grid.Column="1" 
                Color="Aqua" />
        <BoxView 
                Grid.Row="1" 
                Grid.Column="0" 
                Color="Salmon" />
        <BoxView 
                Grid.Row="1" 
                Grid.Column="1" 
                Color="LimeGreen"
            />
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               Grid.Row="0"
            Text="Nombre: Santiago Pilamunga"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
        <Label Grid.Column="1"
               Grid.Row="0"
            Text="Fecha: 02/06/2025"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Grid.Column="0"
               Grid.Row="1"
            Text="Interese: Videjuegos Tecnologia"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Grid.Column="1"
               Grid.Row="1"
            Text="Version 1.0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </Grid>
</ContentPage>